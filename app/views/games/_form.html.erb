<%= form_for(game, :html => {class: "game-form"}) do |f| %>
  <% if game.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(game.errors.count, "error") %> prohibited this game from being saved:</h2>

      <ul>
      <% game.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field is-grouped">

    <p class="control">
      <span class="select">
        <%= f.select :winner_name, User.where(approved: true).pluck(:username), :prompt => "Winner" %>  
      </span>
    </p>
  
    <p class="control">
      <span class="select">
        <%= f.select :winner_score, [3] %>  
      </span>
    </p>

    <p class="control">
      <span class="select">
        <%= f.select :loser_name, User.where(approved: true).pluck(:username), :prompt => "Loser" %>    
      </span>
    </p>

    <p class="control">
      <span class="select">
        <%= f.select :loser_score, [0, 1, 2] %>  
      </span>
    </p>

    <div class="actions">
      <%= f.submit "Submit", class:"button is-primary" %>
    </div>

  </div>
<% end %>
