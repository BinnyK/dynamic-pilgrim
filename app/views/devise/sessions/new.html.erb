<div class="columns">
  <div class="column is-6 is-offset-3">
    <img src="<%= asset_path("cfaponglogo.png" ) %>" class="logo-banner" />
    <h1 class="title is-1 has-text-centered">Log in</h1>

    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      
      <div class="field">
        <%= f.label :email, class:"label" %>
        <%= f.email_field :email, class:"input", placeholder:"Email", autofocus: true %>
      </div>

      <div class="field">
        <%= f.label :password, class:"label" %>
        <%= f.password_field :password, class:"input", placeholder:"Password", autocomplete: "off" %>
      </div>

      <% if devise_mapping.rememberable? -%>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end -%>

      <div class="actions">
        <%= f.submit "Log in", class: "button is-primary" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>