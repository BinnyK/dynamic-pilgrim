<h1><%= @user.username %></h1>
<p>Points: <%= @user.points %></p>
<p>Wins: <%= @user.wins %></p>
<p>Losses: <%= @user.losses %></p>
<div class="columns">
  <div class="column is-8 is-offset-2">
    <div class="table-box">
      <table class="table">
        <thead>
          <tr>
            <th>Win</th>
            <th>Score</th>
            <th>Lost</th>
            <th>Score</th>
            <th>Date</th>
          </tr>
        </thead>
        <tbody>
          <% @games.each do |game| %>
            <% if game.winner_name || game.loser_name == @user.username %>
              <tr>
                <td><%= game.winner_name %></td>
                <td><%= game.winner_score %></td>
                <td><%= game.loser_name %></td>
                <td><%= game.loser_score %></td>
                <td><%= time_ago_in_words(game.created_at) %></td>
              </tr>
            <%else %>
            <% end %>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
